service cloud.firestore {
  match /databases/{database}/documents {
    // gets roles for the user with that userId
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth.token.role == 'ADMIN'
    }

    match /Users/{userId} {
      // allow user to read, admin to write
      allow read: if isSignedIn() && (request.auth.uid == userId || isAdmin())
      allow write: if isSignedIn() && (request.auth.uid == userId || isAdmin())
    }

    match /Images/{imageId} {
      // allow owner to read
      // allow owner to write
      allow read: if isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/Images/$(imageId)).owner
      allow write: if isSignedIn()
    }

    match /Logs/{logId} {
      allow read, write: if isSignedIn() && isAdmin()
    }
  }
}
